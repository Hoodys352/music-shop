@model MusicShop.Models.Entities.Band
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1>Dodaj zespół</h1>
            <form asp-controller="Band" asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text"
                           placeholder="Nazwa zespołu..." />
                    <span asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-outline-success">Utwórz</button>
            </form>
        </div>  
    </div>
</div>