@model IEnumerable<MusicShop.Models.Entities.Album>

<div class="container">
    <div class="row">
        <div class="col-12">
            <input type="search" id="searchInput" placeholder="Search..."
                   class="rounded-pill" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-controller="Album" asp-action="Add"
               class="btn btn-outline-success">Add album</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @foreach (var album in Model)
            {
            <a asp-controller="Album" asp-action="Edit" asp-route-Id="@album.Id"
               class="list-group-item list-group-item-action flex-column align-items-start"
               id="searchResult">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@album.Name</h5>
                </div>
                <small class="text-muted">@album.ReleaseDate.Year</small>
            </a>
            }
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function() {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchResult").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    </script>
}