@model MusicShop.Models.Entities.Album


<form asp-controller="Album" asp-action="Create">
    <div class="form-group">
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input type="date" asp-for="ReleaseDate" />
        <span asp-validation-for="ReleaseDate"></span>
    </div>
    <div class="form-group">
        <input type="number" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <input type="text" name="bandName" />
    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
</form>